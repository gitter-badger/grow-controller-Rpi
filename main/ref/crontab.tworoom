# set default gpio values
@reboot python /home/pi/grow-controller-Rpi/main/ref/boot.py 

#run lcd.py in  background
@reboot python /home/pi/grow-controller-Rpi/main/ref/lcd.py &

#set up export of system gpio control
@reboot echo 22 > /sys/class/gpio/export
@reboot echo 18 > /sys/class/gpio/export
@reboot echo 27 > /sys/class/gpio/export
@reboot echo 23 > /sys/class/gpio/export

############Flower room ################
0 22 * * * python /home/pi/grow-controller-Rpi/main/ref/relay.py -m on  # Main Light on at 22:00
0 10 * * * python /home/pi/grow-controller-Rpi/main/ref/relay.py -m off # Main Light off at 10:00
0 22 * * * python /home/pi/grow-controller-Rpi/main/ref/relay.py -b on  # Ballast Fan on at 22:00
0 10 * * * python /home/pi/grow-controller-Rpi/main/ref/relay.py -b off # Ballast Fan off at 10:00
